ARG VARIANT=stable-slim
FROM docker.io/library/debian:$VARIANT

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install --no-install-recommends --assume-yes \
    apt-utils \
    hello \
    && apt-get clean && rm -fr /var/lib/apt/lists/*

COPY test.sh /tmp/

RUN bash /tmp/test.sh

EXPOSE 5050

CMD [ "hello" ]
